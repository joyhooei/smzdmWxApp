/* pages/priceList/priceList.wxss */

.banners {
  width: 100%;
  height: 360rpx;
}

.swiper-item {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.item-title {
  font-weight: bold;
  margin-top: 20rpx;
  margin-right: 20rpx;
  font-size: 30rpx;
  color: #000;
  height: 80rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.item-article-title {
  margin-top: 20rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #000;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.show {
  
  display: flex;
  flex-direction: column;
}

.hidden {
  display: none;
  flex-direction: column;
}

/* 好价 */

.price-body {
  width: 100%;
  height: 340rpx;
  display: flex;
  flex-direction: column;
}

.price-part {
  display: flex;
  flex-direction: row;
}

.price-img {
  margin: 20rpx;
  width: 360rpx;
  height: 240rpx;
}

.price-article {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.price-price {
  font-weight: bold;
  height: 80rpx;
  font-size: 26rpx;
  color: #df5d58;
  margin-top: 30rpx;
  margin-right: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.price-tag {
  display: flex;
  flex-direction: row;
}

.price-mall {
  color: #fff;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 4rpx;
  background: #de554f;
  max-width: 100rpx;
  font-size: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.price-mall-line {
  display: none;
  background: #969696;
  margin-top: 4rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
  width: 2rpx;
  height: 26rpx;
}

.price-date {
  margin-left: 20rpx;
  color: #fff;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 2rpx;
  background: #de554f;
  font-size: 20rpx;
}

.price-tag-div {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.price-tag-collection-div {
  display: flex;
  float: right;
}

.price-tag-img {
  margin-top: 4rpx;
  width: 26rpx;
  height: 26rpx;
}

.price-collection-text {
  margin-left: 10rpx;
  color: #a6a6a6;
  font-size: 24rpx;
}

.right-view {
  display: flex;
  flex-direction: row;
}

.price-tag-comment-img {
  margin-top: 4rpx;
  margin-left: 20rpx;
  width: 26rpx;
  height: 26rpx;
}

.price-collection-text {
  margin-left: 10rpx;
  color: #a6a6a6;
  font-size: 24rpx;
}
