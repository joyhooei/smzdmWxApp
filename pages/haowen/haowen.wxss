.haowen-body {
  width: 100%;
  height: 240px;
  display: flex;
  flex-direction: column;
}


.haowen-part {
  display: flex;
  flex-direction: column;
}

.haowen-float-view {
  display: flex;
  width:200px;
  height:20px;
  flex-direction: row;
    left: 20px;
  top: 110px;
  position: relative;
  z-index: 1;
}

.haowen-article-author {
 border-radius: 10px;
  width: 20px;
  height: 20px;
}
.haowen-article-text{
  margin-top:3px;
  font-size:10px;
  margin-left:10px;
  color:white;
}

.haowen-img {
  background: #000;
  margin-top: -30px;
  width: 100%;
  max-width: 100%;
  height: 150px;
}
.item-article-title {
  margin-top: 10px;
  margin-right: 10px;
  margin-left: 10px;
  font-size: 15px;
  color: #000;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}