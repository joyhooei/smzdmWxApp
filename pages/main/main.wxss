/* main.wxss */

.banners {
  width: 100%;
  height: 280rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.item-title {
  margin-top: 20rpx;
  margin-right: 20rpx;
  font-size: 25rpx;
  color: #000;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 100rpx;
  font-weight: bold;
}

.item-article-title {
  font-weight: 700;
  margin-top: 20rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  font-family: "黑体";
  font-size: 15rrpx;
  color: #000;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.show {
  display: flex;
  flex-direction: column;
}

.hidden {
  display: none;
  flex-direction: column;
}

/* 好文 */

.article-body {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.article-part {
  display: flex;
  flex-direction: column;
}

.article-float-view {
  display: flex;
  width: 400rpx;
  height: 40rpx;
  flex-direction: row;
  left: 20rpx;
  top: 240rpx;
  position: relative;
  z-index: 1;
}

.article-float-time {
  display: flex;
  width: 120rpx;
  max-width: 200rpx;
  height: 40rpx;
  flex-direction: row;
  float: right;
  top: 200rpx;
  position: relative;
  z-index: 1;
}

.article-article-author {

  border-radius: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.article-article-text {
  margin-top: 6rpx;
  font-size: 20rpx;
  margin-left: 20rpx;
  text-align: center;
  color: #FFF;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 4rpx;
  background: #de554f;
   height: 30rpx;

}

.article-img {
  border-radius: 4rpx;
  margin-top: -80rpx;
  width: 100%;
  height: 300rpx;
}

.item-article-title {
  
  margin-top: 20rpx;
  margin-right: 20rpx;
