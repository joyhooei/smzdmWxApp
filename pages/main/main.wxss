  margin-right: 16rpx;
}

.article-tag {
  margin-top: 20rpx;
  margin-left: 20rpx;
  color: #a6a6a6;
  width: 500rpx;
  font-size: 24rpx;
}

.article-collection-text {
  margin-top: 20rpx;
  margin-left: 10rpx;
  color: #a6a6a6;
