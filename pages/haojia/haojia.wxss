/* pages/haojia.wxss */

.banners {
  width: 100%;
  height: 180px;
}
.swiper-item{
display: flex;
  justify-content: center;

  width: 100%;

  height: 100%;
}
.slide-image {
  width: 100%;
  height: 100%;
}

.item-title {
  font-weight: bold;
  margin-top: 10px;
  margin-right: 10px;
  font-size: 15px;
  color: #000;
  height: 40px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.item-article-title {
  margin-top: 10px;
  margin-right: 10px;
  margin-left: 10px;
  font-size: 15px;
  color: #000;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.show {
  display: flex;
  flex-direction: column;
}

.hidden {
  display: none;
  flex-direction: column;
}

/* 好价 */

.haojia-body {
  width: 100%;
  height: 170px;
  display: flex;
  flex-direction: column;
}

.haojia-part {
  display: flex;
  flex-direction: row;
}

.haojia-img {
  margin: 10px;
  width: 180px;
  height: 120px;
}

.haojia-article {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.haojia-price {
   font-weight: bold;
  height: 40px;
  font-size: 13px;
  color: #df5d58;
  margin-top: 15px;
  margin-right: 10px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.haojia-tag {
  display: flex;
  flex-direction: row;

}

.haojia-mall {
 
    color: #FFF;
  padding-left: 5px;
  padding-right: 5px;
  border-radius: 2px;
  background: #de554f;
  max-width: 50px;
  font-size: 10px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;

}

.haojia-mall-line {
  display: none;
  background: #969696;
  margin-top: 2px;
  margin-right: 5px;
  margin-left: 5px;
  width: 1px;
  height: 13px;
}

.haojia-date {
  margin-left: 10px;
   color: #FFF;

  padding-left: 5px;
  padding-right: 5px;
  border-radius: 2px;
  background: #de554f;
  font-size: 10px;

}

.haojia-tag-div {


  width: 100%;
  display: flex;
  justify-content: space-between;

}

.haojia-tag-collection-div {

  display: flex;
  float: right;
}

.haojia-tag-img {
  margin-top: 2px;
  width: 13px;
  height: 13px;
}

.haojia-collection-text {
  margin-left: 5px;
  color: #a6a6a6;
  font-size: 12px;
}

.right-view {
  display: flex;
  flex-direction: row;
}

.haojia-tag-comment-img {
  margin-top: 2px;
  margin-left: 10px;
  width: 13px;
  height: 13px;
}

.haojia-collection-text {
  margin-left: 5px;
  color: #a6a6a6;
  font-size: 12px;
}
