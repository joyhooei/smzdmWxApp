/* pages/maininfo/maininfo.wxss */
@import "../../wxParse/wxParse.wxss";

.banner-view {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.bannerImageView {
  margin-top: -70rpx;
  flex-direction: column;
  width: 100%;
  display: flex;
  align-content: center;
  align-items: center;
}

.bannerImage {
  width: 500rpx;
  height: 460rpx;
  margin-top: -70rpx;
}

.banners {
  width: 100%;
  height: 360rpx;
  margin-top: -70rpx;
}

.mall-horizontal-line {
  background: #fbfbfb;
  width: 100%;
  height: 2rpx;
  margin-bottom: 20rpx;
}

.choice {
  border-top-right-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
  top: 40rpx;
  background: #df5d58;
  color: white;
  width: 80rpx;
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  position: relative;
  z-index: 1;
}

.mall-text {
  margin-right: 20rpx;
  color: #fff;
  text-align: center;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 4rpx;
  background: #de554f;
  margin-left: 20rpx;
  font-size: 24rpx;
  max-width: 120rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.mall-line {
  display: none;
  background: #969696;
  margin-top: 4rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
  width: 2rpx;
  height: 26rpx;
}

.mall-date {
  margin-right: 20rpx;
  color: #fff;
  text-align: center;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 4rpx;
  background: #de554f;
  font-size: 24rpx;
}

.mall-view {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.mall-title {
  margin-top: 20rpx;
  min-height: 120rpx;
  max-height: 240rpx;
  width: 100%;
  font-size: 40rpx;
  font-weight: bold;
}

.mall-price {
  font-size: 36rpx;
  width: 100%;
  height: 80rpx;
  font-weight: bold;
  color: #df5d58;
}

.mall-title-div {
  display: flex;
  margin-left: 20rpx;
  margin-right: 20rpx;
  flex-direction: column;
}

.mall-desc {
  margin-top: 40rpx;
  font-size: 32rpx;
  width: 100%;
  height: 80rpx;
  color: #606060;
}
