/* pages/maininfo/maininfo.wxss */
@import "../../wxParse/wxParse.wxss";
.banner-view{
 
  width: 100%;
  display: flex;

  flex-direction: column;


}
.bannerImageView{
    margin-top: -35px;
    flex-direction: column;
  width: 100%;
  display: flex;
     align-content: center;
 align-items: center;
}
.bannerImage{

  width: 250px;
  height: 230px;
  margin-top: -35px;
}
.banners {
  width: 100%;
  height: 180px;
  margin-top: -35px;
}

.mall-horizontal-line {
  background: #fbfbfb;
  width: 100%;
  height: 1px;
  margin-bottom: 10px;
}

.jingxuan {
  border-top-right-radius: 3px;
  border-bottom-right-radius: 3px;
  top: 20px;
  background: #df5d58;
  color: white;
  width: 40px;
  display: flex;
  justify-content: center;

  font-size: 12px;
  position: relative;
  z-index: 1;
}

.mall-text {
  margin-right: 10px;
   color: #FFF;
   text-align: center;
  padding-left: 5px;
  padding-right: 5px;
  border-radius: 2px;
  background: #de554f;
  margin-left: 10px;
  font-size: 12px;
  max-width: 60px;
 
  
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.mall-line {
  display: none;
  background: #969696;
  margin-top: 2px;
  margin-right: 5px;
  margin-left: 5px;
  width: 1px;
  height: 13px;
}

.mall-date {
  
    margin-right: 10px;
   color: #FFF;
   text-align: center;
  padding-left: 5px;
  padding-right: 5px;
  border-radius: 2px;
  background: #de554f;
  font-size: 12px;
  
}

.mall-view {
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  width: 100%;

}

.mall-title {
  margin-top: 10px;
    min-height: 60px;
  max-height: 120px;
  width: 100%;

  font-size: 20px;
  font-weight: bold;
}

.mall-price {
  font-size: 18px;
  width: 100%;
  height: 40px;
  font-weight: bold;
  color: #df5d58;
}

.mall-title-div {
  display: flex;
  margin-left: 10px;
  margin-right: 10px;
  flex-direction: column;
}

.mall-desc {
  margin-top: 20px;
  font-size: 16px;
  width: 100%;
  height: 40px;
  color: #606060;
}
